<%- include('templates/header.ejs', {title:"Instalaciones"}) -%>




    <%- include('templates/nav.ejs') -%>

        <main>
            <h1>
                <%= titulo%>
            </h1>
            <p>
                <%=descripcion %>
            </p>

            <div class="fotos instalaciones">
                <%if(instalaciones.length>1) { %>
                    <% instalaciones.forEach(element=> { %>
                        <article>

                            <figure>
                                <img src=<%=element.imagen.src%> alt="<%=element.imagen.alt%>">
                                    <figcaption>
                                        <%=element.descripcionFoto%>
                                    </figcaption>
                            </figure>
                        </article>
                        <%})%>

                            <% }%>
            </div>
        </main>


        <%- include('templates/footer.ejs') -%>